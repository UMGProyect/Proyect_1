@model Proyect_1.Models.User

@{
    ViewData["Title"] = "Login";
}

<!-- Enlace al archivo CSS -->
<link rel="stylesheet" href="~/css/styles.css" />

<div class="d-flex justify-content-center align-items-center vh-100">
    <!-- Logo del login -->
    <img src="~/images/logoUMG.png" alt="Logo Universidad" class="logo mb-4" />

    <!-- Tarjeta del formulario con estilo azul -->
    <div class="card p-4 shadow login-card">
        <h2 class="text-center mb-4 text-white">Iniciar Sesión</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Name" class="text-white">Nombre de Usuario</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Password" class="text-white">Contraseña</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            @if ((Context.Session.GetInt32("LoginAttempts") ?? 0) >= 5)
            {
                <div class="form-group mb-4">
                    <label class="text-white">Verificación de reCAPTCHA</label>
                    <div class="g-recaptcha" data-sitekey="6Lepo1gqAAAAAJqO1RhlNUP5wE5cN0ZV3CAbNeOU" data-callback="onCaptchaSuccess"></div>
                    <span asp-validation-for="RecaptchaToken" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />
            }

            <div class="form-group mb-4">
                <button type="submit" class="btn btn-light btn-block">Iniciar Sesión</button>
            </div>
        </form>
        <div class="d-flex">
            <a class="btn btn-secondary ms-2" asp-controller="Home" asp-action="Registrar">Registrarse</a>
        </div>
        <hr />
        <div class="text-center">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger">
                    @Html.ValidationSummary(true)
                </div>
            }
        </div>
    </div>
</div>

<script src="https://www.google.com/recaptcha/enterprise.js" async defer></script>

<script>
    function onCaptchaSuccess(token) {
        // Asigna el token al campo oculto
        document.getElementById("recaptchaToken").value = token;
    }
</script>
